{
  "name": "codehydra-dictation",
  "displayName": "CodeHydra Dictation",
  "description": "Voice-to-text dictation for VS Code",
  "version": "1.0.0-placeholder",
  "publisher": "codehydra",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefanhoelzl/codehydra"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "build": "node esbuild.config.js"
  },
  "dependencies": {
    "assemblyai": "^4.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "codehydra-dictation",
          "title": "Dictation",
          "icon": "$(mic)"
        }
      ]
    },
    "views": {
      "codehydra-dictation": [
        {
          "type": "webview",
          "id": "codehydra.dictation.audioCapture",
          "name": "Audio Capture",
          "visibility": "hidden"
        }
      ]
    },
    "commands": [
      {
        "command": "codehydra.dictation.toggle",
        "title": "Dictation: Toggle Recording"
      },
      {
        "command": "codehydra.dictation.start",
        "title": "Dictation: Start Recording"
      },
      {
        "command": "codehydra.dictation.stop",
        "title": "Dictation: Stop Recording"
      }
    ],
    "keybindings": [
      {
        "command": "codehydra.dictation.toggle",
        "key": "f10",
        "mac": "f10"
      },
      {
        "command": "codehydra.dictation.stop",
        "key": "escape",
        "when": "codehydra.dictation.isRecording"
      }
    ],
    "configuration": {
      "title": "Dictation",
      "properties": {
        "codehydra.dictation.provider": {
          "type": "string",
          "enum": [
            "auto",
            "assemblyai"
          ],
          "default": "auto",
          "description": "Speech-to-text provider. 'auto' selects the first provider with a configured API key."
        },
        "codehydra.dictation.assemblyai.apiKey": {
          "type": "string",
          "default": "",
          "description": "AssemblyAI API key for speech-to-text. Get one at https://www.assemblyai.com/"
        },
        "codehydra.dictation.silenceTimeout": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 60,
          "description": "Auto-stop after this many seconds without receiving any transcribed text."
        }
      }
    },
    "configurationDefaults": {
      "terminal.integrated.commandsToSkipShell": [
        "codehydra.dictation.toggle"
      ]
    }
  }
}
