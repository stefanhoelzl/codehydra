{
  "name": "codehydra-dictation",
  "displayName": "CodeHydra Dictation",
  "description": "Voice-to-text dictation for VS Code",
  "version": "1.0.0-placeholder",
  "publisher": "codehydra",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefanhoelzl/codehydra"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "build": "node esbuild.config.js"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "assemblyai": "^4.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "codehydra.dictation.toggle",
        "title": "Dictation: Toggle Recording"
      },
      {
        "command": "codehydra.dictation.start",
        "title": "Dictation: Start Recording"
      },
      {
        "command": "codehydra.dictation.stop",
        "title": "Dictation: Stop Recording"
      },
      {
        "command": "codehydra.dictation.cancel",
        "title": "Dictation: Cancel Recording (no Enter)"
      },
      {
        "command": "codehydra.dictation.openPanel",
        "title": "Dictation: Open Panel"
      }
    ],
    "keybindings": [
      {
        "command": "codehydra.dictation.toggle",
        "key": "f10",
        "mac": "f10"
      },
      {
        "command": "codehydra.dictation.cancel",
        "key": "escape",
        "mac": "escape",
        "when": "codehydra.dictation.isRecording"
      }
    ],
    "configuration": {
      "title": "Dictation",
      "properties": {
        "codehydra.dictation.provider": {
          "type": "string",
          "enum": [
            "auto",
            "assemblyai"
          ],
          "default": "auto",
          "description": "Speech-to-text provider. 'auto' selects the first provider with a configured API key."
        },
        "codehydra.dictation.assemblyai.apiKey": {
          "type": "string",
          "default": "",
          "description": "AssemblyAI API key for speech-to-text. Get one at https://www.assemblyai.com/"
        },
        "codehydra.dictation.assemblyai.connectionTimeout": {
          "type": "number",
          "default": 2000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "Connection timeout in milliseconds when connecting to AssemblyAI."
        },
        "codehydra.dictation.autoStopDelay": {
          "type": "number",
          "default": 5,
          "minimum": 3,
          "maximum": 60,
          "description": "Auto-stop after this many seconds without speech activity."
        },
        "codehydra.dictation.listeningDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 1000,
          "description": "Delay in milliseconds before showing 'listening' (orange) state when no speech detected."
        },
        "codehydra.dictation.autoSubmit": {
          "type": "boolean",
          "default": true,
          "description": "Emit Enter key when manually stopping dictation (F10 or status bar click)."
        }
      }
    },
    "configurationDefaults": {
      "terminal.integrated.commandsToSkipShell": [
        "codehydra.dictation.toggle",
        "codehydra.dictation.cancel"
      ]
    }
  }
}
