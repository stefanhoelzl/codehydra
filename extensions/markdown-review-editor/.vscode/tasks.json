{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clean-log",
			"type": "shell",
			"command": "rm -f server.log mock-server.log",
			"windows": {
				"command": "if (Test-Path server.log) { Remove-Item server.log }; if (Test-Path mock-server.log) { Remove-Item mock-server.log }"
			},
			"linux": {
				"command": "rm -f server.log mock-server.log"
			},
			"osx": {
				"command": "rm -f server.log mock-server.log"
			},
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			}
		},
		{
			"label": "build",
			"type": "npm",
			"script": "build",
			"problemMatcher": ["$tsc"],
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			}
		},
		{
			"label": "build-sidekick-if-needed",
			"type": "shell",
			"command": "if (-not (Test-Path ../sidekick/dist/extension.cjs)) { pnpm --filter sidekick build }",
			"windows": {
				"command": "if (-not (Test-Path ../sidekick/dist/extension.cjs)) { pnpm --filter sidekick build }"
			},
			"linux": {
				"command": "[ -f ../sidekick/dist/extension.cjs ] || pnpm --filter sidekick build"
			},
			"osx": {
				"command": "[ -f ../sidekick/dist/extension.cjs ] || pnpm --filter sidekick build"
			},
			"options": {
				"cwd": "${workspaceFolder}/../.."
			},
			"problemMatcher": ["$tsc"],
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			}
		},
		{
			"label": "build-and-clean-log",
			"dependsOn": ["clean-log", "build"],
			"dependsOrder": "sequence"
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "dev",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "built in"
				}
			},
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated"
			}
		},
		{
			"label": "mock-plugin-server",
			"type": "shell",
			"command": "npx",
			"args": ["tsx", "scripts/mock-plugin-server.ts"],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Starting Mock PluginServer",
					"endsPattern": "Waiting for sidekick extension to connect"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "build-and-start-mock",
			"dependsOn": ["clean-log", "build-sidekick-if-needed", "build", "mock-plugin-server"],
			"dependsOrder": "sequence"
		}
	]
}
