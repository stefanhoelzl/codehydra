{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}", "--log=debug"],
			"outFiles": ["${workspaceFolder}/dist/**/*.cjs"],
			"preLaunchTask": "build-and-clean-log",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			}
		},
		{
			"name": "Run Extension (Watch Mode)",
			"type": "extensionHost",
			"request": "launch",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}", "--log=debug"],
			"outFiles": ["${workspaceFolder}/dist/**/*.cjs"],
			"preLaunchTask": "clean-log",
			"env": {
				"VSCODE_DEBUG_MODE": "true"
			}
		},
		{
			"name": "Run with Sidekick (CodeHydra Mock)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionDevelopmentPath=${workspaceFolder}/../sidekick",
				"--log=debug"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.cjs",
				"${workspaceFolder}/../sidekick/dist/**/*.cjs"
			],
			"preLaunchTask": "build-and-start-mock",
			"env": {
				"VSCODE_DEBUG_MODE": "true",
				"CODEHYDRA_PLUGIN_PORT": "51200"
			}
		},
		{
			"name": "Run with Sidekick (Watch Mode)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionDevelopmentPath=${workspaceFolder}/../sidekick",
				"--log=debug"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.cjs",
				"${workspaceFolder}/../sidekick/dist/**/*.cjs"
			],
			"preLaunchTask": "mock-plugin-server",
			"env": {
				"VSCODE_DEBUG_MODE": "true",
				"CODEHYDRA_PLUGIN_PORT": "51200"
			}
		}
	],
	"compounds": [
		{
			"name": "Debug Extension + Mock Server",
			"configurations": ["Run with Sidekick (CodeHydra Mock)"],
			"stopAll": true
		}
	]
}
