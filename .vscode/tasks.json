{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "bootstrap",
      "type": "shell",
      "command": "pnpm",
      "args": ["bootstrap"],
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "close": true
      }
    },
    {
      "label": "build-markdown-review-editor",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "markdown-review-editor", "build"],
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "build-sidekick-if-needed",
      "type": "shell",
      "command": "if (-not (Test-Path extensions/sidekick/dist/extension.cjs)) { pnpm --filter sidekick build }",
      "windows": {
        "command": "if (-not (Test-Path extensions/sidekick/dist/extension.cjs)) { pnpm --filter sidekick build }"
      },
      "linux": {
        "command": "[ -f extensions/sidekick/dist/extension.cjs ] || pnpm --filter sidekick build"
      },
      "osx": {
        "command": "[ -f extensions/sidekick/dist/extension.cjs ] || pnpm --filter sidekick build"
      },
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "clean-mock-logs",
      "type": "shell",
      "command": "if (Test-Path extensions/markdown-review-editor/mock-server.log) { Remove-Item extensions/markdown-review-editor/mock-server.log }",
      "windows": {
        "command": "if (Test-Path extensions/markdown-review-editor/mock-server.log) { Remove-Item extensions/markdown-review-editor/mock-server.log }"
      },
      "linux": {
        "command": "rm -f extensions/markdown-review-editor/mock-server.log"
      },
      "osx": {
        "command": "rm -f extensions/markdown-review-editor/mock-server.log"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "mock-plugin-server",
      "type": "shell",
      "command": "npx",
      "args": ["tsx", "extensions/markdown-review-editor/scripts/mock-plugin-server.ts"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Mock PluginServer",
          "endsPattern": "Waiting for sidekick extension to connect"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "build-extensions-and-start-mock",
      "dependsOn": [
        "clean-mock-logs",
        "build-sidekick-if-needed",
        "build-markdown-review-editor",
        "mock-plugin-server"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}
