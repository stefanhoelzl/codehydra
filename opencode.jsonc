{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "feature",
  "model": "anthropic/claude-opus-4-5",
  "provider": {
    "anthropic": {
      "models": {
        "review": {
          "id": "claude-sonnet-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 10000,
            },
          },
        },
      },
    },
  },
  "permission": {
    "bash": {
      "*": "deny",
      // Git read-only commands
      "git log*": "allow",
      "git diff*": "allow",
      "git show*": "allow",
      "git status": "allow",
      // File inspection commands
      "ls*": "allow",
      "tree*": "allow",
      "cat*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "wc*": "allow",
      "pwd": "allow",
    },
  },
  "agent": {
    "build": {
      "color": "#A16207", // amber
    },
    "plan": {
      "color": "#3B82F6", // blue
    },
  },
}
