{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "feature",
  "permission": {
    "bash": {
      "*": "deny",
      // Git read-only commands
      "git log*": "allow",
      "git diff*": "allow",
      "git show*": "allow",
      "git status": "allow",
      // File inspection commands
      "ls*": "allow",
      "tree*": "allow",
      "cat*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "wc*": "allow",
      "pwd": "allow",
    },
  },
  "agent": {
    "build": {
      "color": "#A16207", // amber
      "permission": {
        "bash": {
          "*": "allow",
        },
      },
    },
    "general": {
      "permission": {
        "bash": {
          "*": "allow",
        },
      },
    },
    "plan": {
      "color": "#3B82F6", // blue
      "permission": {
        "edit": "deny",
        "write": "deny",
      },
    },
  },
}
