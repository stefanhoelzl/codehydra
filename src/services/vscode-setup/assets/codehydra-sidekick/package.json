{
  "name": "sidekick",
  "displayName": "CodeHydra Sidekick",
  "description": "CodeHydra integration for VS Code",
  "version": "0.0.1",
  "publisher": "codehydra",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefanhoelzl/codehydra"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "build": "node esbuild.config.js"
  },
  "dependencies": {
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "esbuild": "^0.24.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "codehydra.debug.getStatus",
        "title": "CodeHydra Debug: Get Workspace Status",
        "enablement": "codehydra.isDevelopment"
      },
      {
        "command": "codehydra.debug.getMetadata",
        "title": "CodeHydra Debug: Get Workspace Metadata",
        "enablement": "codehydra.isDevelopment"
      },
      {
        "command": "codehydra.debug.getOpencodePort",
        "title": "CodeHydra Debug: Get OpenCode Port",
        "enablement": "codehydra.isDevelopment"
      },
      {
        "command": "codehydra.debug.connectionInfo",
        "title": "CodeHydra Debug: Show Connection Info",
        "enablement": "codehydra.isDevelopment"
      }
    ],
    "configurationDefaults": {
      "workbench.startupEditor": "none",
      "window.autoDetectColorScheme": true,
      "workbench.preferredDarkColorTheme": "Default Dark+",
      "workbench.preferredLightColorTheme": "Default Light+",
      "telemetry.telemetryLevel": "off",
      "security.workspace.trust.enabled": false,
      "security.workspace.trust.untrustedFiles": "open",
      "security.workspace.trust.startupPrompt": "never"
    }
  }
}
