{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "types": ["node"]
  },
  "include": [
    "src/env.d.ts",
    "src/main/**/*",
    "src/preload/**/*",
    "src/services/**/*",
    "src/shared/**/*",
    "src/test/**/*"
  ]
}
