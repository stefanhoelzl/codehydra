{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/renderer/lib/*"],
      "@shared/*": ["src/shared/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": [
    "src/env.d.ts",
    "src/renderer/**/*",
    "src/shared/**/*",
    "src/test/**/*",
    "src/services/test-utils.ts"
  ],
  "exclude": ["node_modules", "app-data"]
}
