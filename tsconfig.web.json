{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/renderer/lib/*"]
    }
  },
  "include": ["src/renderer/**/*", "src/shared/**/*"]
}
